# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,127.0.0.1,localhost

# Database Configuration (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Sentry Configuration (Optional - for error monitoring)
SENTRY_DSN=your-sentry-dsn-here

# Email Configuration (Optional - for password reset emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Church Configuration
CHURCH_NAME=JEHOVAH-NISSI BIBLE FELLOWSHIP MINISTRY
CHURCH_LOCATION=Arusha, Tanzania

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
